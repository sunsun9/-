.title{
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.content-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10px;
  font-size: 25px;
}

.shop{
  display: flex;
  border-bottom: 15rpx solid rgb(185, 210, 235);
}

.shop_img{
  flex:1;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  margin-bottom: 10px;
  
}

.shop_text{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.collection{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.shop_title{
  align-content: center;
  border-bottom: 1rpx solid #F5F5F5;
  background-color: #FFFFFF
}
