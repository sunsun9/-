<!--pages/my/my.wxml-->
<view class = "content">
    <!-- 用户信息 -->
  <view class="userinfo">
    <!-- 用户头像 -->
    <view class="userinfo-avatar" >
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <!-- 用户昵称 -->
    <view >
      <open-data class="username" type="userNickName"></open-data>
    </view>
  </view>

  <!-- 功能列表 -->
  <!-- 查看收藏 -->
  <view class="collection">
    <image src="/images/collect2.png" style="width: 40px; height: 30px;margin-top: -5px;"></image>
    <view class="collection_text">
      <view>我的收藏</view>
      <image src="/images/next.png" style="width: 20px; height: 20px; margin-right: 20px;" bindtap="go_collection"></image>      
    </view>
  </view>
</view>