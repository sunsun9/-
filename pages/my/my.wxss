/* pages/my/my.wxss */
.content-title {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 150rpx 0;
  margin-top: -60px;
  font-size: 20px;
}

.userinfo {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.username{
  color: black;
  font-family: "楷体";
}
.collection{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.collection_text{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-left: 10px;
  color: black;
  font-size: large;
  font-family: "楷体";
  border-bottom: 2rpx solid rgb(173, 172, 172);
  margin-right: 10px;
}
 
