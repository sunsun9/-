/**index.wxss**/

.scrollview {
  height: 100vh;
}

.content-title {
  height: 100%;
  margin-top: -60px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 150rpx 0;
  box-sizing: border-box;
  font-size: 20px;
  background-color: #8ab84b;
}

.search-container{
  
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color:#86b8ea;
}
.search-left{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  background-color: #eee;
  border-radius: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.search-left image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
  padding: 10rpx 20rpx;
  vertical-align: middle;
  
}
.search-left input{
  display: inline-block;
  vertical-align: middle;
  width: calc(100% - 88rpx);
}

